                    a(href='#') Свитер с горлом
            .u-1-2.u-xs-1.u-sm-1-2.u-md-1.u-lg-1-2
                +product-size
                //span.error Выберите размер
                +product-color-with-titles
                

//- Product Size
mixin product-size-chbx
    ul.product_size
        li
            input.input(type="checkbox", name="size", id="size0", value="0", disabled="disabled")
            label.label(for="size0") 
                span XS
        li
            input.input(type="checkbox", name="size", id="size1", value="1", disabled="disabled")
            label.label(for="size1") 
                span X
        li
            input.input(type="checkbox", name="size", id="size2", value="2")
            label.label.product-qty_few(for="size2") 
                span M
        li
            input.input(type="checkbox", name="size", id="size3", value="3")
            label.label(for="size3") 
                span L
        li
            input.input(type="checkbox", name="size", id="size4", value="4", checked="checked")
            label.label(for="size4") 
                span XL

