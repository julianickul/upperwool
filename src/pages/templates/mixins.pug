//- Catalog
mixin catalog-item(_is_in_wishlist)
    .catalog_item
        .carousel_container
            ul.carousel
                - for (var x = 1; x < 4; x++)
                    li 
                        -var filename = "product_carousel_0" + x +".jpg"
                        .product_pic
                            a(href="javascript:void(0)")
                                img(src="./images/content/"+filename, alt="")
                    
            .carousel_prev
                span.icon.icon--type_nav_prev
            .carousel_next
                span.icon.icon--type_nav_next
            
            if _is_in_wishlist
                .wishlist-action.selected
                    span.wishlist-action_icon
                        svg(width="26", height="27", viewBox="0 0 84 74")
                            |<use xlink:href="#heart" x="0" y="2" width="26" height="27" class="fill"/>
                    span.wishlist-action_text Добавлено в wishlist
            else
                .wishlist-action
                    span.wishlist-action_icon
                        svg(width="26", height="27", viewBox="0 0 84 74")
                            |<use xlink:href="#heart" x="0" y="2" width="26" height="27"/>
                    span.wishlist-action_text Добавить в wishlist
        +product-params-for-category

